<Window x:Class="Dark_Admin_Panel.AboutMeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dark_Admin_Panel"
        mc:Ignorable="d"
        Title="Informação do Projeto" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="10" ShadowDepth="3" Opacity="0.1"/>
    </Window.Resources>
    <Grid Background="White">
        <Border Background="#FFF8F8F8" 
                BorderBrush="#FFDDDDDD"
                BorderThickness="1"
                CornerRadius="5" 
                Margin="60" 
                Padding="30"
                Effect="{StaticResource DropShadowEffect}">

            <StackPanel VerticalAlignment="Center">
                <!-- Header -->
                <TextBlock Text="Informação do Projeto Académico" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Foreground="#FF333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Project details -->
                <StackPanel Margin="0,0,0,30">
                    <TextBlock Text="• Trabalho de Grupo" Foreground="#FF444444" Margin="5,3" FontSize="16"/>
                    <TextBlock Text="• Licenciatura em Engenharia Informática (Pós-Laboral)" Foreground="#FF444444" Margin="5,3" FontSize="16"/>
                    <TextBlock Text="• 2º Ano - Unidade Curricular: Programação Avançada" Foreground="#FF444444" Margin="5,3" FontSize="16"/>
                    <TextBlock Text="• Instituto Superior de Línguas e Administração de Gaia" Foreground="#FF444444" Margin="5,3" FontSize="16"/>
                    <TextBlock Text="• Data de Conclusão: Junho 2025" Foreground="#FF444444" Margin="5,3" FontSize="16"/>
                </StackPanel>

                <!-- Team members -->
                <TextBlock Text="Elementos do Grupo:" 
                           FontWeight="SemiBold" 
                           Foreground="#FF333333"
                           FontSize="16"
                           Margin="5,10,5,10"/>

                <UniformGrid Rows="1" Columns="4" HorizontalAlignment="Center">
                    <Border BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Margin="10" Padding="0,0,0,5">
                        <TextBox Text="Gabriel Ferreira" 
                                Width="180" 
                                Foreground="#FF222222" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                IsReadOnly="True"
                                TextAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Margin="10" Padding="0,0,0,5">
                        <TextBox Text="Pedro Leite" 
                                Width="180" 
                                Foreground="#FF222222" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                IsReadOnly="True"
                                TextAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Margin="10" Padding="0,0,0,5">
                        <TextBox Text="Pedro Silva Figueiredo" 
                                Width="180" 
                                Foreground="#FF222222" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                IsReadOnly="True"
                                TextAlignment="Center"/>
                    </Border>
                    <Border BorderBrush="#FFEEEEEE" BorderThickness="0,0,0,1" Margin="10" Padding="0,0,0,5">
                        <TextBox Text="Ricardo Brandão" 
                                Width="180" 
                                Foreground="#FF222222" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="14"
                                IsReadOnly="True"
                                TextAlignment="Center"/>
                    </Border>
                </UniformGrid>

                <!-- Close button -->
                <Button Content="Fechar" 
                        Width="120" 
                        Height="32"
                        Margin="0,40,0,0" 
                        Background="#FF333333" 
                        Foreground="White"
                        BorderThickness="0"
                        FontSize="14"
                        Cursor="Hand"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
<UserControl x:Class="Dark_Admin_Panel.UserControls.StackPanelFiltrosUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0 0 30 20">
        <!-- Define 2 colunas lado a lado -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Filtros por ano na primeira coluna -->
        <StackPanel x:Name="FiltrosAnos"
                    Orientation="Horizontal"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"/>

        <!-- Filtros por data na segunda coluna -->
        <StackPanel x:Name="FiltrosDatas"
                    Orientation="Horizontal"
                    Grid.Column="1"
                    VerticalAlignment="Center"/>
    </Grid>
</UserControl>
